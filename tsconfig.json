{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "lib/",
		"sourceMap": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src/"],
	"exclude": ["node_modules/", "tests"]
}
